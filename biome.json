{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "files": {
    "includes": [
      "**",
      "!dist",
      "!coverage",
      "!node_modules",
      "!.claude",
      "!.codex",
      "!docs/website/.next",
      "!docs/website/.source",
      "!src/baseline/features.ts",
      "!src/baseline/data/descriptors.api.ts",
      "!src/baseline/data/descriptors.jsbi.ts"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error"
      }
    }
  }
}
